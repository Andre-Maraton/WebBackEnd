<%- include("partials/header") %>
<div class="container-fluid">

<!-- Banner Section -->
    <section class="banner_part">
        <div class="container">
            <div class="row align-items-center justify-content-between">

                <!-- Greetings Part -->
                <div class="col-lg-5 col-md-6">
                    <div class="banner_text">
                        <div class="banner_text_iner">
                            <h1>Reserve Your Tickets Now!</h1>
                            <p>Everyone deserves a great experience, we are here to give
                                 you full entertainment that you deserve. Affordable price. Awesome Experience.</p>
                            <a href="#schedule_part" class="btn_1">Cinema Schedule</a>
                        </div>
                    </div>
                </div>

                <!-- Swiper Part -->
                <div class="col-lg-7 col-md-6">
                    <div class="swiper-container">
                        <div class="swiper-wrapper">
                            <% movies.forEach(function(movies){%>
                                <div class="swiper-slide">
                                    <img src="<%= movies.poster %>" class="card-img-top" alt="...">
                                </div>
                            <% }) %>
                        </div>
                        <div class="swiper-pagination"></div>                     
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<!-- Movies Section -->
<div class="container" id="schedule_part">
    <div class="row">
        <div class="col-sm-12 col-md-4 col-lg-4">
            <div class="card bg-transparent">
                <% movies.forEach(function(movie){%>
                <div class="front">
                    <img src="<%= movie.poster %>" class="card-img-top" alt="..."> 
                </div>
                <div class="back">
                    <div class="back-content align-left">
                        <center>
                            <h3><%= movie.title %></h3>
                            <hr>
                            <p>Directed by: <%= movie.director %></p>
                            <p>Rating: <i class="fa fa-star"></i><%= movie.rating %></p>
                            <p>Runtime: <%= movie.runtime %></p>
                            <p>Genre: <%= movie.genre %></p>
                            <a href="/mrs/<%= movie._id %>" class="btn_1 btn-block fixed-bottom" aria-pressed="true">VIEW MORE</a>
                        </center>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>
<%- include("partials/footer") %>