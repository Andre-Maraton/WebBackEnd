<%- include("partials/header") %>

<!-- Breadcrumbs Section -->
<section class="breadcrumb breadcrumb_bg reserve_title" style="background-image: url('/img/seats.jpg');
background-repeat: no-repeat; background-size: cover;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>Dashboard</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Reservations Section -->
<section class="synopsis_part section_part">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="section_title text-center">
                    <h2>Reservations</h2>
                </div>
            </div>
        </div>
        <div class="row table_container table-responsive">
            <table class="table table-dark table-hover reservations-table">
                <thead class="thead-dark">
                    <tr>
                        <th>Movie</th>
                        <th>Cinema</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>No. of Seats</th>
                        <th>Amount</th>
                        <th>Seats</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% reserve.forEach(function(res){%>
                        <form id="form" action="/delete/<%= res._id %>?_method=DELETE" method="POST">
                        <tr>
                            <td><%= res.movie %></td>
                            <td><%= res.cinema %></td>
                            <td><%= res.date %></td>
                            <td><%= res.time %></td>
                            <td><%= res.numSeats %></td>
                            <td><%= res.payment %></td>
                            <td><%= res.seats %></td>
                            <td><button type="submit" value="<%= res._id %>" class="btn btn-primary" aria-pressed="true">CANCEL</button></td>
                        </tr>
                    </form>
                    <% }) %>
                </tbody>
            </table>
        </div>
      </div>
  </section>
  <%- include("partials/footer") %>